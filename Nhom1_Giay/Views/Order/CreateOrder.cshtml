@model Nhom1_Giay.Models.CreateOrderViewModel

@{
    ViewData["Title"] = "Tạo Đơn hàng";
}

<h2>Tạo Đơn hàng</h2>

<form method="post" asp-action="CreateOrder">
    <div class="form-group">
        <label for="UserId">User ID</label>
        <input type="number" name="UserId" class="form-control" required value="@Model.UserId" />
    </div>

    <div class="form-group">
        <label for="Status">Trạng thái</label>
        <input type="text" name="Status" class="form-control" value="@Model.Status" readonly />
    </div>

    <button type="submit" class="btn btn-success">Tạo Đơn hàng</button>
</form>

<a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại danh sách đơn hàng</a>
